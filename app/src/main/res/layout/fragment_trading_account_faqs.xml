<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FAQs.TradingAccountFaqsFragment">


    <include
        android:id="@+id/toolbar"
        layout="@layout/plain_app_bar"
        android:layout_width="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/arrow_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Account Account FAQs"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp" />


    <RelativeLayout
        android:id="@+id/RLAccountMaintenance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/border_white_tv"
        android:elevation="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Account Maintenance"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RLDepositWithdrawls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLAccountMaintenance"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/border_white_tv"
        android:elevation="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Deposit - Withdrawls"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RLCommissionsAndTaxesFaqs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLDepositWithdrawls"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/border_white_tv"
        android:elevation="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Commissions &amp; Taxes"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RLCustodyMatters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLCommissionsAndTaxesFaqs"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/border_white_tv"
        android:elevation="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Custody Matters"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RLTradingApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLCustodyMatters"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/border_white_tv"
        android:elevation="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Trading Application"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RLTechnicalIssues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RLTradingApplication"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/border_white_tv"
        android:elevation="@dimen/_10sdp"
        android:paddingVertical="@dimen/_12sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="@dimen/_10sdp"
            android:elevation="@dimen/_10sdp"
            android:text="Technical Issues"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>



</RelativeLayout>