<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AccountCreated">


    <LinearLayout
        android:id="@+id/LLParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_25sdp"
        android:paddingTop="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/pointer" />

    </LinearLayout>

    <TextView
        android:id="@+id/youraccountTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LLParent"
        android:layout_marginVertical="@dimen/_5sdp"
        android:gravity="center"
        android:text="Your practice account has been created"
        android:textColor="@color/original_red"
        android:textSize="@dimen/_16sdp" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youraccountTV"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/unTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="User Name: "
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/GetUserNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LLParent"
            android:layout_toEndOf="@id/unTV"
            android:layout_weight="1"
            android:gravity="start"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginVertical="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="Password: "
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/GetPasswordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="start"
            android:text=" "
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>


    <TextView
        android:id="@+id/activateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/okBtn"
        android:layout_below="@+id/ll2"
        android:layout_marginHorizontal="@dimen/_2sdp"

        android:gravity="center"
        android:text="Activate your practice account using the verification link sent at your registered email address"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp" />

    <RelativeLayout
        android:id="@+id/okBtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
      android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_25sdp"
        android:background="@drawable/red_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/loginTeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

    </RelativeLayout>
</RelativeLayout>